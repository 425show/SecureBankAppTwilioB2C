@page
@model PaymentsModel

@{
    ViewData["Title"] = "Payments";
}

<div class="container" style="margin: 0 auto; width:80%">
    <h3>Manage recurring payments</h3>
    
    <form method="post" >
        <div class="form-group">
            <label for="nameTextInput" style="color: lightgrey;">Friendly Name</label>
            <input type="text" id="nameTextInput" class="form-control" placeholder="My new service" required/>
            <div class="valid-feedback">
                Name looks good!
            </div>
        </div>
        <div class="form-group">
            <label for="accountTextInput" style="color: lightgrey;">Account Number</label>
            <input type="number" id="accountTextInput" class="form-control" placeholder="12567894323" required pattern="[0-9]" />
            <div class="valid-feedback">
                Account number looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a valid account number
            </div>
        </div>
        <div class="form-group">
            <label for="routingTextInput" style="color: lightgrey;">Routing Number</label>
            <input type="number" id="routingTextInput" class="form-control" placeholder="2345433456" required pattern="[0-9]" />
            <div class="valid-feedback">
                Routing number looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a valid routing number
            </div>
        </div>
        <div class="form-group">
            <label for="valueTextInput" style="color: lightgrey;">Amount</label>
            <input type="number" id="valueTextInput" class="form-control" placeholder="$0.01 - 1,000,000" required min="0.00" max="1000000.00" step="0.01" />
            <div class="valid-feedback">
                Value looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a valid value in $$$$
            </div>
        </div>
        <div style="margin-top:1.1em;">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>

    <hr/>

    <div class="card">
        <div class="card-body">
            <div class="card-text">
                Internet -$120.99
                <br/>
                <button type="button" class="btn btn-small btn-outline-success btn-rounded waves-effect">
                    <i class="fas fa-edit pr-2" aria-hidden="true"></i>
                        Manage
                </button>
            </div>
        </div>
    </div>
    <div style="margin:30px"></div>

    <div class="card">
        <div class="card-body">
            <div class="card-text">
                Gas & Electricity - $100.00
                <br/>
                <button type="button" class="btn btn-small btn-outline-success btn-rounded waves-effect">
                    <i class="fas fa-edit pr-2" aria-hidden="true"></i>
                        Manage
                </button>
            </div>
        </div>
    </div>
    <div style="margin:30px"></div>

    <div class="card">
        <div class="card-body">
            <div class="card-text">
                Phone - $50.00
                <br/>
                <button type="button" class="btn btn-small btn-outline-success btn-rounded waves-effect">
                    <i class="fas fa-edit pr-2" aria-hidden="true"></i>
                        Manage
                </button>
            </div>
        </div>
    </div>
</div>